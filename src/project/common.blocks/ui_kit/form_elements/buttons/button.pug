mixin button(text,href='',type='',mode='button')
	.button-wrapper
		if mode==='button_border'
			// Button_border
			if type==='submit'
				input.button.button_border(type='submit' value=text)
			else
				a.button.button_border(href=href)=text
		else if mode==='button_simple'
			// Button_simple
			if type==='submit'
				input.button_simple(type='submit' value=text)
			else
				a.button_simple(href=href)=text
		else if mode==='button_wide'
			// Button_wide
			if type==='submit'
				input.button.button_full.button_wide(type='submit' value=text)
			else
				a.button.button_full.button_wide(href=href)=text
			span.button__icon
				<svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z" fill="white"/></svg>
		else
			// Button
			if type==='submit'
				input.button.button_full(type='submit' value=text)
			else
				a.button.button_full(href=href)=text