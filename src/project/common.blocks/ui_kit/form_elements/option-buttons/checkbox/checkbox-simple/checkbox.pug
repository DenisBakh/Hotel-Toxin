mixin checkbox-shape(id, kind, value,descr)
	.checkbox-shape
		input.checkbox-shape__input(type="checkbox" id=id name=id value="yes",kind='simple')
		label(for=id) 
			.checkbox-shape__shape.option-shape
				.checkbox-shape__inside
			.checkbox-shape__text
				if kind==='rich'
					p.checkbox-shape__richText=value
					p.checkbox-shape__smallText=descr
				else 
					span=value

