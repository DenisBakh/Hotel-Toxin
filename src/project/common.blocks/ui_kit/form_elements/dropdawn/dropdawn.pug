
mixin inputDropdawnDate-mini(id1="date2",id2="date3", label1="date Dropdown",label2="date Dropdown", placeholder="ДД.ММ.ГГГГ",value1="", descr1="",value2="", descr2="")
	div.text-field
		.text-field__row
			.text-field__column
				.label
					label.label__title(for= id1)= label1
					label.label__descr= descr1
				.text-field__wrapper
						.dropdawn-icon
						input.text-field__input.datepick( type="text", name=id1, placeholder=placeholder, id= id1, value= value1)
			.text-field__column
				.label
					label.label__title(for= id2)= label2
					label.label__descr= descr2
				.text-field__wrapper
						.dropdawn-icon
						input.text-field__input.datepick( type="text", name=id2, placeholder=placeholder, id= id2, value= value2)

