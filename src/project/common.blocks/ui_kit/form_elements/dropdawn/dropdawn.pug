mixin inputDropdawnGuests(label="Dropdown", value="Сколько гостей", descr="")
	div.text-field
		.label
			.label__title= label
			.label__descr= descr
		.text-field__wrapper
			.dropdawn-icon
			.text-field__input(data-valueDefault=value).text-field__input_dropDawn=value
			.dropdawn-field
				.dropdawn-field__container
					.dropdawn-field__row
						label.dropdawn-field__subject(for= "adults") взрослые
						.dropdawn-field__counter
							.counter
								a.counter__minus.counter__btn
								input.counter__cnt.dropdawn-field__subject(data-declensions="гость, гостя, гостей",id="adults", type="text", name="взрослые", value=0)
								a.counter__plus.counter__btn.counter__btn_active
					.dropdawn-field__row
						label.dropdawn-field__subject(for= "children") дети
						.dropdawn-field__counter
							.counter
								a.counter__minus.counter__btn
								input.counter__cnt.dropdawn-field__subject(id="children",type="text", name="дети", value=0)
								a.counter__plus.counter__btn.counter__btn_active
					.dropdawn-field__row
						label.dropdawn-field__subject(for= "babies") младенцы
						.dropdawn-field__counter
							.counter
								a.counter__minus.counter__btn
								input.counter__cnt.dropdawn-field__subject(id="babies",type="text", name="младенцы", value=0)
								a.counter__plus.counter__btn.counter__btn_active
				.dropdawn-field__row_buttons
					a.dropdawn-field__clear(href="") очистить
					a.dropdawn-field__accept(href="") применить

