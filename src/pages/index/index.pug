<!DOCTYPE html>
html(lang='ru')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
		title Document
	body
		-
			var headerMenu = [
				{text: 'О нас', link:'#',submenu:''}, 
				{text: 'Услуги', link:'#',submenu:['1','2','3']}, 
				{text: 'Вакансии', link:'#',submenu:''},
				{text: 'Новости', link:'#',submenu:''},
				{text: 'Соглашения', link:'#',submenu:['5','123','11']}
			]
		- var headerLoginButton = [{text: 'войти', link:'#',type:'', mode:'button_border'}]
		- var headerRegButton =[{text: 'зарегистрироваться', link:'#',type:'',mode:'button'}]

		.wrapper
			+header('unlogged', headerMenu, headerLoginButton,headerRegButton)
			main.main
				.container.container_landing
					.find-room
						include /project/common.blocks/ui_kit/cards/find-room/find-room.pug
